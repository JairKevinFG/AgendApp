<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Cliente {{client.name}}</h3>
               <p> Registrado :  {{tiempo client.createdAt}} </p>
        </div>
        <div class="card-body">
            <form action="/client/edit/{{note.id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" value="{{client.name}}">
                </div>
                 <div class="form-group">
                    <input type="email" name="email" class="form-control" value="{{client.email}}">
                </div>
                <div class="form-group">
                    <input type="phone" name="phone" class="form-control" value="{{client.phone}}">
                </div>
                 <div class="form-group">
                    <textarea name="description" class="form-control" cols="30" rows="10">{{client.description}}</textarea>
                </div>
               
                 <div class="form-group">
                     <button class="btn btn-primary btn-block" type="submit">
                         Guardar
                     </button>
                </div>
            </form>
        </div>
    </div>
</div>