

<div  class="row">
    <div class="col-md-6 offset-md-0 col-10 offset-1  mt-4  ">
        <h2 class="">Editar Cita</h2>
        <form id="nueva-cita" method="POST" action="/appointments/edit/{{appointment.id}}?_method=PUT">
            <div class="form-group">
                <label for="patient">Paciente</label>
                <select class="form-control" id="patient" name="patient">
                    {{#patients}}
                        <option id="name" >{{name}}</option>
                    {{/patients}}
                </select>
            </div>
            <div class="form-group">
                <label for="dateAppointment" >Fecha:</label>
                <input type="date" id="dateAppointment" name="dateAppointment"  value="{{AppointmentEdit appointment.dateAppointment}}" class="form-control">
            </div>
            <div class="form-group ">
                <label for="timeAppointment">Hora:</label>
                <input type="time" id="timeAppointment" name="timeAppointment" class="form-control" value="{{appointment.timeAppointment}}">
            </div>

            <div class="form-group ">
                <label for = "description">Descripción:</label>
                <textarea id="description" name="description" class="form-control" > {{appointment.description}} </textarea>
            </div>
            <div class="form-group row ">
                <div class="col-md-4 offset-md-4 text-center">
                    <button class="btn btn-success mt-2 mb-4" type="submit">
                        Guardar cambios
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4 offset-md-1 col-10 offset-1  mt-4">
        <h2 class="">Administra tus Citas</h2>

        {{#appointments}}
            <div data-id="{{id}}" class="card border-light mb-3" style="max-width: 18rem;">
                <div class="card-body ">
                    <h5 class="card-title">{{patient}}</h5>
                    <p class="card-text">Fecha: {{ showAppointmentDate dateAppointment }} </p>
                    <p class="card-text">Hora: {{timeAppointment}}</p>
                    <p class="card-text">Descripción: {{description}} </p>
                    <div class="row">
                        <div class="col">
                            <form action="/appointments/delete/{{_id}}?_method=DELETE" method="POST">
                                <button   type="submit" class="btn btn-danger mt-2">Eliminar</button>
                            </form>
                        </div>
                        <div class="col">
                            <button class="btn btn-info mt-2" href="/appointments/edit/{{_id}}" role="button" > Editar </button>
                        </div>
                    </div>

                </div>
            </div>

        {{/appointments}}
    </div>

</div> <!--.row-->